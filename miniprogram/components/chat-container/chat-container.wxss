.chat-container {
    width: 100%;
    height: 100%;
    background-color: #EDEDED;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0;
    margin: 0;
    overflow: hidden;
}

/* More specific selector to ensure full width */
.chat-page .chat-content .full-width-container {
    width: 100%;
    max-width: 100vw;
}

.message-list {
    display: flex;
    flex-direction: column;
    padding: 8rpx 12rpx;
    box-sizing: border-box;
    min-height: 100%;
    width: 100%;
}