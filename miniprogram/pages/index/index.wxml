<!-- 聊天助手页面 -->
<view class="container">
  <view class="debug-container">
    <view class="debug-box debug-box-recognition">
      <view class="debug-title">实时识别结果:</view>
      <view class="input-container">
        <textarea value="{{debugRecognizedText}}" placeholder="请说话..." bindinput="onDebugTextInput" class="editable-textarea"></textarea>
        <button class="send-button" bindtap="sendEditedText" disabled="{{isWaitingForDeepseek}}">
          发送
        </button>
      </view>
    </view>
    <view class="debug-box debug-box-response">
      <view class="debug-title">Deepseek 回复:</view>
      <textarea value="{{debugDeepseekResponse}}" placeholder="等待回复..." disabled></textarea>
    </view>
  </view>
  <view class="orb-container">
    <view class="orb {{orbState}}" bindtap="handleOrbTap"></view>
    <view class="orb-instruction">{{isRecording ? '正在聆听... 点击停止' : '点击开始说话'}}</view>
  </view>
</view>