/**index.wxss**/
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    min-height: 100vh;
}

.title {
    font-size: 44rpx;
    font-weight: bold;
    margin-bottom: 50rpx;
    color: #333;
    text-align: center;
}

.demo-cards {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 30rpx;
    margin-bottom: 50rpx;
}

.demo-card {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    position: relative;
}

.demo-card:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.demo-card.highlighted {
    border: 2rpx solid #1aad19;
    background-color: #f0fff0;
}

.card-title {
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
    color: #333;
}

.card-desc {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
}

.card-badge {
    position: absolute;
    top: -10rpx;
    right: -10rpx;
    background-color: #1aad19;
    color: white;
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 30rpx;
    font-weight: bold;
}

.footer {
    margin-top: auto;
    font-size: 24rpx;
    color: #999;
    text-align: center;
    padding: 30rpx 0;
}

/* 语音识别样式更新 */
.voice-button {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f0f1f5;
    margin-left: 12px;
    transition: all 0.3s;
}

.voice-button.recording {
    background-color: #e74c3c;
}

.voice-icon {
    width: 20px;
    height: 20px;
}

.voice-recording-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.voice-recording-container {
    width: 80%;
    max-width: 300px;
    background-color: white;
    border-radius: 16px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.voice-wave-animation {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80px;
    margin-bottom: 16px;
}

.voice-wave {
    width: 8px;
    height: 30px;
    background-color: #1677ff;
    margin: 0 4px;
    border-radius: 4px;
    animation: wave 1s infinite ease-in-out;
}

.voice-wave:nth-child(2) {
    animation-delay: 0.2s;
    height: 40px;
}

.voice-wave:nth-child(3) {
    animation-delay: 0.4s;
    height: 50px;
}

@keyframes wave {

    0%,
    100% {
        transform: scaleY(1);
    }

    50% {
        transform: scaleY(1.5);
    }
}

.voice-recording-text {
    font-size: 14px;
    color: #333;
    margin-bottom: 20px;
    text-align: center;
    line-height: 1.5;
}

.voice-action-buttons {
    display: flex;
    width: 100%;
    justify-content: space-between;
}

.voice-cancel-button {
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    background-color: #f0f1f5;
    color: #333;
    text-align: center;
}

.voice-done-button {
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    background-color: #1677ff;
    color: white;
    text-align: center;
}

.message-input:disabled {
    background-color: #f9f9f9;
    color: #666;
}