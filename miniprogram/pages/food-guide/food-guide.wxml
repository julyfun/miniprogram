<view class="food-guide-container">
    <!-- Navigation bar with back button (explicitly setting back button color to white) -->
    <navigation-bar title="美食指南" back="{{true}}" color="#ffffff" backgroundColor="transparent" backIconColor="#ffffff"></navigation-bar>
    <!-- Main content area -->
    <view class="content-area">
        <!-- Video player -->
        <view class="video-section">
            <video id="foodVideo" src="{{videoUrl}}" controls="{{false}}" show-center-play-btn="{{true}}" show-play-btn="{{true}}" bindplay="onVideoPlay" bindpause="onVideoPause" bindended="onVideoEnded" bindtimeupdate="onVideoTimeUpdate" bindtap="onVideoTap" object-fit="contain" autoplay="{{true}}"></video>
            <!-- Custom progress bar -->
            <view class="progress-container">
                <view class="progress-bar">
                    <view class="progress-fill" style="width: {{progressPercent}}%"></view>
                </view>
                <view class="progress-time">{{currentTime}}/{{duration}}</view>
            </view>
        </view>
        <!-- Interaction buttons overlaid on the right -->
        <view class="interaction-buttons">
            <view class="button-item liked-button {{isLiked ? 'active' : ''}}" bindtap="onLikeClick">
                <image src="/assets/icons/video/like.svg" class="icon {{isLiked ? 'liked' : ''}}"></image>
                <text>喜欢</text>
            </view>
            <view class="button-item saved-button {{isSaved ? 'active' : ''}}" bindtap="onSaveClick">
                <image src="/assets/icons/video/collect.svg" class="icon {{isSaved ? 'saved' : ''}}"></image>
                <text>收藏</text>
            </view>
            <view class="button-item" bindtap="onCommentClick">
                <image src="/assets/icons/video/comment.svg" class="icon"></image>
                <text>评论</text>
            </view>
        </view>
    </view>
    <!-- Comment input area (appears when comment button is clicked) -->
    <view class="comment-area {{showCommentInput ? 'active' : ''}}">
        <view class="comment-input-container">
            <input class="comment-input" placeholder="说点什么..." value="{{commentText}}" bindinput="onCommentInput" confirm-type="send" bindconfirm="sendComment" focus="{{showCommentInput}}" />
            <view class="comment-send-button" bindtap="sendComment">发送</view>
        </view>
    </view>
</view>